<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
<%= current_user.email %>
<%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete } %>
<% else %>
<%= link_to "Sing up", new_user_registration_path %>
<%= link_to "Login", new_user_session_path %>
<% end %>

<h1>Pokemons</h1>

<div id="pokemons">
  <% @pokemons.each do |pokemon| %>
    <%= render pokemon %>
    <p>
      <%= link_to "Show this pokemon", pokemon %>
    </p>
  <% end %>
</div>

<%= link_to "New pokemon", new_pokemon_path %>
